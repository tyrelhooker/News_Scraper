<!-- Modal -->
<div class="modal" id="noteModal{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="..." aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="#titleInput">{{title}}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <ul class="list-group note-container">
          <li class="list-group-item">No notes for this article yet.</li>
        </ul>
        <div class="form-group">
          <textarea placeholder="New Note" class="form-control" id="newNote-text"></textarea>
        </div>
      </div>
      <div class="modal-footer">
        <button class="btn btn-success save" id="saveNote">Save Note</button>
      </div>
    </div>
  </div>
</div>